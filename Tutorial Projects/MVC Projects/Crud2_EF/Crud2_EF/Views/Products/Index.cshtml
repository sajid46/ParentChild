@model IEnumerable<Crud2_EF.EF.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table css-table">
    <tr>
        <th>
            
        </th>
        <th>
            Name
        </th>
        <th>
            Product Number
        </th>

        <th>
            Color
        </th>

        <th>
            Standard Cost
        </th>
        <th>
            List Price
        </th>
        <th>
            Size
        </th>

        <th>
            Weight
        </th>
        



        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>

            
            @{
                if (item.ProductSubcategoryID >= 1 && item.ProductSubcategoryID <= 3)
                {
                    <img src="~/Images/cycle.jpg" />
                }
                else if (item.ProductSubcategoryID == 4)
                {
                    <img src="~/Images/handlebars.JPG" />
                }
                else if (item.ProductSubcategoryID == 8)
                {
                    <img src="~/Images/cranksets.jpg" />
                }
                else if (item.ProductSubcategoryID == 108)
                {
                    <img src="~/Images/forks.jpg" />
                }
                else if (item.ProductSubcategoryID >= 18 && item.ProductSubcategoryID <= 25)
                {
                    <img src="~/Images/clothing.jpg" />
                }
                else if (item.ProductSubcategoryID == 12)
                {
                    <img src="~/Images/cycleframe.jpg" />
                }
                else if (item.ProductSubcategoryID == 31)
                {
                    <img src="~/Images/helmets.jpg" />
                }
                else if (item.ProductSubcategoryID == 37)
                {
                    <img src="~/Images/tyres.jpg" />
                }

            }

        </td>
        
        <td>

            @{
                   @Html.DisplayFor(modelItem => item.Name)
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductNumber)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.StandardCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
      
        
        
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID })
        </td>
    </tr>
}

</table>
